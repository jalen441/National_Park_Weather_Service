        </div>
            <div class="form-group">
                <label class="control-label">Activity level</label>
                <label><input type="radio" class="form-control" name="extremely active" />Extremely Active</label>
                <label><input type="radio" class="form-control" name="active" />Active</label>
                <label><input type="radio" class="form-control" name="sedentary" />Sedentary</label>
                <label><input type="radio" class="form-control" name="inactive" />Inactive</label>
                <span asp-validation-for="ActivityLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
